<div class="row mt-5">
  <div class="col-8">
    <table class="table table-striped table-hover">
      <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Actions</th>
      </tr>
      </thead>
      <tbody>
      <% if !@friends.empty? %>
        <% @friends.each do |friend| %>
          <tr>
            <th scope="row"><%= friend.full_name %></th>
            <td><%= friend.email %></td>
            <td>
              <%= link_to 'View profile', user_path(friend), class: 'btn btn-sm btn-info' %>
              <%= link_to 'Stop following', friendship_path(friend.id), method: :delete,
                            data: { confirm: 'Are you sure you want to stop following this friend?' },
                            class: 'btn btn-sm btn-warning' %>
            </td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <th scope="row" colspan="3" class="text-center">No friends yet</th>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>